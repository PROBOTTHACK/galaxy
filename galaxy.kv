#:import menu menu
ScreenManagement:
    MainWindow:
        canvas.before:
            Rectangle:
                size: self.size
                source: 'images/2.jpg'
    RegisterWindow:
        canvas.before:
            Rectangle:
                size: self.size
                source: 'images/2.jpg'
    LoginWindow:
        canvas.before:
            Rectangle:
                size: self.size
                source: 'images/2.jpg'
    MainWidget:
    Tutorial:
        canvas.before:
            Rectangle:
                size: self.size
                source: 'images/2.jpg'
<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: 'images/2.jpg'
    menu_widget: menu_widget
    perspective_point_x: self.width/2
    perspective_point_y: self.height *0.75
    MenuWidget:
        id: menu_widget
    Label:
        text: root.score_txt
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        size_hint: 0 , .2
        pos_hint: {"x": 0.5, "top": 1}
<Tutorial>:
    Label:
        text: root.tut_text
        font_size: dp(30)
        font_name: 'fonts/Eurostile.ttf'
        size_hint: 0 , .3
        pos_hint: {"x": 0.5, "center_y":0.7}