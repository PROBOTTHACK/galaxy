<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0,0,0,.8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .6}
    Button:
        font_size: dp(30)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_title_button
        pos_hint: {"center_x": .5, "center_y": .3}
        size_hint: .2,.15
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .85
    Button:
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.tutorial_button
        pos_hint: {"center_x": .5, "center_y": .1}
        size_hint: .2,.15
        on_press: root.parent.how_to_play()
        background_normal: ''
        background_color: 1, .3, .4, .85
    Button:
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        text:  "Home"
        pos_hint: {"center_x": .1, "y": .9}
        size_hint: .1,.07
        on_press: root.parent.prev_pg()
        background_normal: ''
        background_color: 1, .3, .4, .85
    Label:
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.highscore
        pos_hint: {"center_x": .5, "center_y": .8}



